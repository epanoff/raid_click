graphical
skipx
lang en_GB.UTF-8
keyboard us
timezone Europe/Moscow
rootpw --iscrypted $1$xyzadsas$hcXRL5zWLFylqz6OIzpn10
selinux --disabled
reboot
network  --bootproto=static --gateway=81.171.22.30 --hostname=zoo-clickhouse01.lw.eu.prod.appmetr.pix.team --ip=81.171.22.26 --nameserver=85.17.150.123,85.17.96.69,62.212.64.122 --netmask=255.255.255.192 --noipv6 --activate

bootloader --append="rd.auto=1 crashkernel=auto" --location=mbr --driveorder="sda,sdb" --boot-drive=sda


zerombr
clearpart --all

part raid.11 --size 1024 --fstype="mdmember"  --asprimary --ondrive=sda
part raid.12 --size 1024 --fstype="mdmember"  --asprimary --ondrive=sda
part raid.13 --size 1024 --fstype="mdmember" --asprimary --grow  --ondrive=sda
part raid.21 --size 1024 --fstype="mdmember"  --asprimary --ondrive=sdb
part raid.22 --size 1024 --fstype="mdmember"  --asprimary --ondrive=sdb
part raid.23 --size 1024 --fstype="mdmember" --asprimary --grow  --ondrive=sdb
raid / --device=1 --fstype="ext4" --level=RAID1 raid.13 raid.23 
raid /boot --device=0 --fstype="ext2" --level=RAID1 raid.11 raid.21
raid swap --fstype swap --device swap --level=RAID1 raid.12 raid.22

%post

echo "nameserver 85.17.150.123" > /etc/resolv.conf
